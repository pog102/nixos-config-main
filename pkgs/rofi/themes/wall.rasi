element-icon {
    padding:                        -50px 0px;

    /* padding:                        0px -40px; */
    /* horizontal-align:               0.5; */
    border:                         4px 4px solid 4px 4px;
    border-color:                   transparent;
    border-radius:                  16;
    size:                           240;
}

element-icon selected {
    border-color:                   @color4;
}

element-text {
    horizontal-align:               0.5;
    horizontal-align:               0.5;
    width:                          160px;
}
